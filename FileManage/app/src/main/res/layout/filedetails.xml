<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ToggleButton
            android:id="@+id/FileSelect"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:checked="false"
            android:background="@drawable/radio"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/FileTypeIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/file"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/FileName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="我的文件"
            android:gravity="start|center_vertical"
            android:layout_weight="5" />

        <Button
            android:id="@+id/FileRename"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/rename"
            android:visibility="invisible"
            android:layout_gravity="center"
          />
        <android.support.constraint.Placeholder
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FileCopy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/copy"
            android:visibility="invisible"
            android:layout_gravity="center"/>
        <android.support.constraint.Placeholder
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FileMove"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/move"
            android:visibility="invisible"
            android:layout_gravity="center"/>
        <android.support.constraint.Placeholder
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FileDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/delete"
            android:visibility="invisible"
            android:layout_gravity="center"/>
        <android.support.constraint.Placeholder
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/FileDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="2019.12.08"
        android:gravity="start|center_vertical"
        android:layout_weight="3"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/FileType"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="文件夹"
        android:gravity="start|center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/FileSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="4KB"
        android:gravity="start|center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"/>
</LinearLayout>